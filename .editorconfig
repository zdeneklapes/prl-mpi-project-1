# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{py,sh, cpp, c, h, hpp, cc, }]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120

[Makefile]
indent_style = tab

[*.{js, jsx, ts, tsx, html, css, scss, yml, json, yarn.lock}]
indent_style = space
indent_size = 2
tab_width = 2
